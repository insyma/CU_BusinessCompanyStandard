                                    <option ng-repeat="s in dllSurveyOnline" value="{{s.Id}}" ng-selected="searchParams.SurveyOnlineId == s.Id">{{s.PublicationDate | date:'dd.MM.yyyy HH:mm:ss'}}</option>
