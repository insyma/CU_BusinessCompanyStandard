                                <span ng-show="party.ProgressState == 0">@Html.Raw(LabelHelper.GetProgramString("ParticipationsTotal")) </span>
                                <span ng-show="party.ProgressState == 1">@Html.Raw(LabelHelper.GetProgramString("ParticipationsInProgress")) </span>
