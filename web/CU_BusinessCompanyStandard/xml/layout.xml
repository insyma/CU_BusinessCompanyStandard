		<item_height>40</item_height>
		<item_border_color>0xFFFFFF</item_border_color>
		<item_border_width>2</item_border_width>
		<index_item_width>200</index_item_width>
		<index_item_height>170</index_item_height>
		<item_highlight_color>0xff4500</item_highlight_color>
		<mark_icon>none</mark_icon>
		<margin_t>0</margin_t>
		<margin_b>5</margin_b>
		<margin_left_right>5</margin_left_right>
	</thumbnail>
	<popup>
		<border_color>0xFFFFFF</border_color>
