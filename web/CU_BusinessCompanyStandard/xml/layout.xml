	<buttons>
		<scrollbar>
			<limiter>
				<color>0xFF0000</color>
				<border>0x000000</border>
				<width>4</width>
				<alpha>1</alpha>
			</limiter>
			<handler>
				<color>0xFF0000</color>
				<border>0x000000</border>
				<width>16</width>
				<alpha>0.75</alpha>
			</handler>
			
		</scrollbar>
		<paging>
			<next_icon>next.png</next_icon>
			<prev_icon>prev.png</prev_icon>
			<close_icon>close.png</close_icon>
		</paging>
		<printing>
			<border_alpha>0.7</border_alpha>
			<width>0</width>
			<height>0</height>
			<bgcolor>0xFF0000</bgcolor>
			<button_bgcolor>0x00FF00</button_bgcolor>
			<textcolor>0x000000</textcolor>
			<font_family>Verdana</font_family>
			<font_size>12</font_size>
		</printing>
	</buttons>
	<toolbar>
		<bgcolor>0xFFFFFF</bgcolor>
		<margin_top>10</margin_top>
		<margin_bottom>5</margin_bottom>
		<padding_left>12</padding_left>
		<padding_top>5</padding_top>		
		<width>330</width>
		<height>42</height>
		<icon_path>../img/pdfViewer_icons/</icon_path>
		<items>
			<item>
				<command>prev</command>
				<icon>prev.png</icon>
				<type>button</type>		<!--Type: seperator, Button, TextBox-->
				<width>32</width>		<!--in pixel-->
			</item>
			<item>
				<command>pagenum</command>
				<type>textbox</type>
				<width>20</width>
				<height>20</height>
				<icon>none</icon>
				<border>0xFF5200</border>
				<bgcolor>0xFFFFFF</bgcolor>
			</item>
			<item>
				<command>totalpage</command>
				<type>label</type>
				<width>15</width>
				<height>20</height>
				<icon>none</icon>
			</item>
			<item>
				<command>next</command>
				<icon>next.png</icon>
				<type>button</type>		<!--Type: seperator, Button, TextBox-->
				<width>32</width>		<!--in pixel-->
			</item>
			<item>
				<command>zoom_in</command>
				<icon>zoomin.png</icon>
				<type>button</type>		<!--Type: seperator, Button, TextBox-->
				<width>32</width>		<!--in pixel-->
			</item>
			<item>
				<command>zoom_out</command>
				<icon>zoomout.png</icon>
				<type>button</type>		<!--Type: seperator, Button, TextBox-->
				<width>32</width>		<!--in pixel-->
			</item>
			<item>
				<command>zoom_actual</command>
				<icon></icon>
				<type>button</type>		<!--Type: seperator, Button, TextBox-->
				<width>0</width>		<!--in pixel-->
			</item>
			<item>
				<command>zoom_fit</command>
				<icon></icon>
				<type>button</type>		<!--Type: seperator, Button, TextBox-->
				<width>0</width>		<!--in pixel-->
			</item>
			<item>
				<command>keyword</command>
				<type>textbox</type>
				<width>0</width>
				<height>0</height>
				<icon></icon>
				<border></border>
				<bgcolor></bgcolor>
			</item>
			<item>
				<command>prev_result</command>
				<icon></icon>
				<type>button</type>		<!--Type: seperator, Button, TextBox-->
				<width>0</width>		<!--in pixel-->
			</item>
			<item>
				<command>next_result</command>
				<icon></icon>
				<type>button</type>		<!--Type: seperator, Button, TextBox-->
				<width>0</width>		<!--in pixel-->
			</item>
			<item>
				<command>fullscreen</command>
				<icon>fullscreen.png</icon>
				<type>button</type>		<!--Type: seperator, Button, TextBox-->
				<width>32</width>		<!--in pixel-->
			</item>
			<item>
				<command>view_magazine</command>
				<icon></icon>
				<type>button</type>		<!--Type: seperator, Button, TextBox-->
				<width>0</width>		<!--in pixel-->
			</item>
			<item>
				<command>view_presentation</command>
				<icon></icon>
				<type>button</type>		<!--Type: seperator, Button, TextBox-->
				<width>0</width>		<!--in pixel-->
			</item>
			<item>
				<command>view_index</command>
				<icon>index.png</icon>
				<type>button</type>		<!--Type: seperator, Button, TextBox-->
				<width>32</width>		<!--in pixel-->
			</item>
			<item>
				<command>print</command>
				<icon></icon>
				<type>button</type>		<!--Type: seperator, Button, TextBox-->
				<width>0</width>		<!--in pixel-->
			</item>
			<item>
				<command>help</command>
				<icon></icon>
				<type>button</type>		<!--Type: seperator, Button, TextBox-->
				<width>0</width>		<!--in pixel-->
			</item>
		</items>
	</toolbar>
